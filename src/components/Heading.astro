---
import Dessert from "./icons/Dessert.astro";

interface Props {
  content: string;
  className: string;
}

const {content = "Heading", className = ""} = Astro.props
---
<h1 class={`
text-2xl 2xs:text-3xl xs:text-4xl sm:text-5xl 
sm:font-extrabold font-bold tracking-[-2.5px] sm:tracking-[-3.5px] 

text-main flex items-center gap-x-2 ${className}`}>
  {content}
  <Dessert class="size-6 xs:size-8 sm:size-12" />
</h1>